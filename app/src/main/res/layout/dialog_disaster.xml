<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardElevation="6dp"
    android:backgroundTint="#ECF2FF"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="36dp"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieLoading"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:visibility="visible"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/maplottie" />

        <TextView
            android:id="@+id/empty_disaster"
            style="@style/Regular16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_disaster"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_dialog"
            style="@style/Regular16sp"
            android:layout_marginTop="-12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/natural_disasters_that_have_happened" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="6dp"
            tools:ignore="ContentDescription"
            android:src="@drawable/baseline_keyboard_double_arrow_down_24"/>

        <TextView
            style="@style/Regular12sp"
            android:id="@+id/list_disaster"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            tools:text="1. Tafta ganteng\n2. Tafta Ganteng" />
    </LinearLayout>

</androidx.cardview.widget.CardView>