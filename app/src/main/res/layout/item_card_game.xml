<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_game_equisafe"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_gravity="center"
    android:layout_marginHorizontal="32dp"
    android:elevation="12dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_card_games"
            android:layout_width="90dp"
            android:layout_height="98dp"
            tools:src="@drawable/game1_circle"
            android:contentDescription="@string/image_card_game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title_card_games"
            style="@style/SemiBoldGreen16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="20dp"
            tools:text="Disaster Quest"
            app:layout_constraintStart_toEndOf="@+id/iv_card_games"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_desc_card_game"
            style="@style/Light10sp"
            android:layout_width="0dp"
            android:layout_marginEnd="32dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_title_card_games"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_card_games"
            tools:text="Protect, Learn, and Triumph over Disasters!" />

        <TextView
            android:id="@+id/tv_star_rating"
            style="@style/Light10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            app:layout_constraintStart_toStartOf="@+id/tv_desc_card_game"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_card_game"
            tools:text="5,0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:src="@drawable/icon_star"
            android:contentDescription="@string/icon_star"
            app:layout_constraintBottom_toBottomOf="@+id/tv_star_rating"
            app:layout_constraintStart_toEndOf="@+id/tv_star_rating"
            app:layout_constraintTop_toTopOf="@+id/tv_star_rating" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>